                Height="25" Width="400" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontSize="16" DisplayMemberPath="Name" >
        <i:Interaction.Triggers>
          <i:EventTrigger EventName="SelectionChanged">
            <i:InvokeCommandAction Command="{Binding ProductSelectionUpdatedCommand}"/>
          </i:EventTrigger>
        </i:Interaction.Triggers>
      </ComboBox>-->
      
    </Grid>
</UserControl>
